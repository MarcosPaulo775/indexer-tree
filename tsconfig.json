{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "jsx": "preserve",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@chokidar/*": [
        "./src/modules/chokidar/*"
      ],
      "@file/*": [
        "./src/modules/file/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ]
    }
  }
}