{
  "name": "indexer-tree-docker",
  "version": "1.0.0",
  "description": "Indexer files",
  "contributors": [
    {
      "name": "Marcos Paulo da Costa Mendes",
      "url": "https://github.com/MarcosPaulo775"
    },
    {
      "name": "Leonardo Farias de Souza Silva",
      "url": "https://github.com/leofdss"
    }
  ],
  "private": true,
  "license": "MIT License",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "env-cmd -f ./env/node.env nest start",
    "start:debug": "env-cmd -f ./env/node.env nest start --debug --watch",
    "start:dev": "env-cmd -f ./env/node.env nest start --env-file ./env/node.env --watch",
    "start:prod": "env-cmd -f ./env/node.env node dist/main",
    "start:db": "docker-compose -f docker-compose.node.yml --env-file ./env/node.env up -d --build",
    "dev": "docker-compose --env-file ./env/docker-dev.env up -d --build",
    "dev:down": "docker-compose --env-file ./env/docker-dev.env down",
    "prod": "docker-compose -f docker-compose.prod.yml --env-file ./env/docker-prod.env up -d --build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/bull": "^0.3.1",
    "@nestjs/common": "^7.6.15",
    "@nestjs/core": "^7.6.15",
    "@nestjs/mongoose": "^7.2.4",
    "@nestjs/platform-express": "^7.6.15",
    "bull": "^3.22.8",
    "chokidar": "^3.5.2",
    "env-cmd": "^10.1.0",
    "mongoose": "^5.12.14",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^7.6.15",
    "@types/bull": "^3.15.1",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.36",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "test-config",
      "interfaces",
      "jestGlobalMocks.ts",
      ".module.ts",
      ".schema.ts",
      "config.ts",
      ".dto.ts",
      ".d.ts",
      "main.ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@modules/(.*)": "<rootDir>/modules/$1",
      "@shared/(.*)": "<rootDir>/shared/$1"
    }
  }
}
